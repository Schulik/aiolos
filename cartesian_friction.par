#
# Parameterfile for atmosphere simulations
# Do not use tabs, only white spaces as value separators
#

#Control parameters
PARI_PROBLEM_NUMBER     1
PARI_NUM_SPECIES        2
#
# Problem numbers explained: shock_tube, no grav = 1, planet with grav = 2
#

PARI_INIT_DATA_SWITCH   1
PARI_INIT_DATA_U1L      1
PARI_INIT_DATA_U2L      1.0
PARI_INIT_DATA_U3L      1
PARI_INIT_DATA_U1R      1
PARI_INIT_DATA_U2R      1.0
PARI_INIT_DATA_U3R      1

PARI_SELF_GRAV_SWITCH   0
PARI_LINEAR_GRAV        0
PARI_DEBUGLEVEL         1
PARI_INIT_STATIC        1

OUTPUT_FILENAME         test_files/cartesian_frictionRemake

#Numerical parameters
PARI_ORDER              2
PARI_BOUND_TYPE         4
PARI_BOUND_TYPE_LEFT    4
PARI_BOUND_TYPE_RIGHT   4
PARI_DOMAIN_DX          1e-3
PARI_GRID_TYPE          0
PARI_GEOMETRY           0
PARI_CELLS_PER_DECADE   120
PARI_DOMAIN_MIN         0.
PARI_DOMAIN_MAX         1.
PARI_TIME_DT            1e-1
PARI_CFLFACTOR          1.0
PARI_TIME_TMAX          24.01e0
PARI_TIME_OUTPUT        8.e0

#Scenarios
TEMPERATURE_BUMP_STRENGTH 0.
WAVE_USE                0
PARI_INIT_WIND          1
PARI_ALPHA_COLL         0.1

#Physical parameters
PARI_PLANET_POS         0.
PARI_PLANET_MASS        0.
PARI_SMOOTHING_LENGTH   1e-4
PARI_SMOOTHING_TIME     0.0
PARI_GAMMA              1.4
ACCRETION_RATE          1.e-1
PARI_CONST_TEMP         300.
PARI_TEMP_INCR          1.e-8
PARI_USE_RADIATION      0
PARI_CONST_OPAC         1.
PARI_CONST_CV           1.
